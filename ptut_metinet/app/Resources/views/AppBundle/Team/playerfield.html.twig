{% block player_widget %}
    <tr class="player-input">
        <td>{{ form_widget(form.name) }}</td>
        <td>{{ form_widget(form.firstname) }}</td>
        <td>{{ form_widget(form.licenceNumber) }}</td>
        <td>{{ form_widget(form.category) }}</td>
        <td><div class="btn btn-danger remove-button"><span class="glyphicon glyphicon-remove"></span></div></td>
    </tr>
{% endblock %}