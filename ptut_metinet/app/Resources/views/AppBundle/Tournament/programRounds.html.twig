{% form_theme form _self %}

{% block day_widget %}

    <tr class="field-input">

        <td>{#{ form_widget(form.scheduledTime) }#}</td>
        <td>
            <div class="btn btn-danger remove-button"><span class="glyphicon glyphicon-remove"></span></div>
        </td>
    </tr>

{% endblock %}

<div class="row">
    <ul class="nav nav-pills nav-justified" role="tablist">
        {% for day in tournament.days %}
            <li role="presentation" {% if loop.first %}class="active"{% endif %}><a href="#day-{{ loop.index }}" aria-controls="day-{{ loop.index }}" role="tab" data-toggle="tab">{{ day.date|date('d/m/Y') }}</a></li>
        {% endfor %}
    </ul>

    {{  form_start(form) }}
    <div class="tab-content">


        {% for day in form.days %}
            {{ form_widget(day) }}
            <div role="tabpanel" class="tab-pane {% if loop.first %}active{% endif %}" id="day-{{ loop.index }}">

                <table id="day_rounds_container" data-prototype="{{ form_widget(day.rounds.vars.prototype)|e }}" class="table">
                    <thead>
                    <th>Cr√©neau horaire</th>
                    <th>Supprimer</th>
                    </thead>
                    <tbody>
                    </tbody>

                </table>

            </div>
        {% endfor %}

    </div>
    {{  form_end(form) }}
</div>